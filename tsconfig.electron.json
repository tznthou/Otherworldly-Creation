{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist/electron",
    "rootDir": "./electron",
    "noEmit": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "electron/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/renderer",
    "src-tauri"
  ]
}