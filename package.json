{
  "name": "genesis-chronicle",
  "version": "0.1.0",
  "description": "創世紀元：異世界創作神器 - 基於 AI 的輕小說創作工具",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main.js",
    "dev:renderer": "vite",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "clean": "rm -rf dist out",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "make:all": "npm run build && electron-forge make --platform=all",
    "make:mac": "npm run build && electron-forge make --platform=darwin",
    "make:win": "npm run build && electron-forge make --platform=win32",
    "make:linux": "npm run build && electron-forge make --platform=linux",
    "start": "electron-forge start",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "test:unit": "node run-unit-tests.js",
    "test:integration": "node run-integration-tests.js",
    "test:performance": "node run-performance-tests.js",
    "prebuild": "echo 'Skipping lint and tests for packaging'",
    "optimize": "node scripts/optimize-resources.js",
    "prepackage": "npm run optimize",
    "release": "node scripts/release.js",
    "release:dry": "npm run build && npm run package",
    "package:simple": "node scripts/simple-package.js",
    "package:manual": "node scripts/manual-package.js"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "ai",
    "writing",
    "novel",
    "ollama"
  ],
  "author": "Genesis Chronicle Team",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "electron": "^27.1.2",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.16",
    "better-sqlite3": "^12.2.0",
    "lucide-react": "^0.525.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.18.0",
    "slate": "^0.101.5",
    "slate-history": "^0.100.0",
    "slate-react": "^0.101.6",
    "tailwindcss": "^3.3.6",
    "uuid": "^9.0.1"
  }
}
